@{
    Layout = "_Layout";
}
<div id="grid"></div>

<div class="demo-section wide">
    <form method="post" asp-controller="Home" asp-action="CollectHtml">
        <input id="comboBox" />
        <textarea id="textEditor" name="editorData" rows="10" cols="30" style="width:100%; height:500px" aria-label="editor"></textarea>
        <button class="btn btn-success" type="submit" value="submit">Submit</button>
    </form>

</div>
<div class="demo-section">
    <h3>phone</h3>
    <div id="qrMail"></div>
</div>
<script>
    $(document).ready(function () {
        $("#qrMail").kendoQRCode({
            value: "tel:9808262537",
            errorCorrection: "Q",
            size: 120,
            color: "#67a814",
            border: {
                color: "#67a814",
                width: 5
            }
        });
        $.ajax(
            {
                type: "Get",
                url: "/Home/GetData",
                success: function (data) {
                    console.log(data);
                        function customEditor(container) {
                            $('<input name="name">')
                                .appendTo(container)
                                .kendoDropDownList({
                                    dataTextField: "name",
                                    dataValueField: "id",
                                    template: "<div class='dropdown-country-wrap'><span width='30'>#: name#</span></div>",
                                    dataSource: data,
                                    autoWidth: true
                                });
                        }
                    $('#grid').kendoGrid({
                        dataSource : data,
                        columnMenu: {
                            filterable: false
                        },
                        height: 280,
                        editable: "incell",
                        pageable: true,
                        sortable: true,
                        navigatable: true,
                        resizable: true,
                        reorderable: true,
                        groupable: true,
                        filterable: true,
                        toolbar: ["excel", "pdf", "search"],
                        columns: [{
                            selectable: true,
                            width: 75,
                            attributes: {
                                "class": "checkbox-align",
                            },
                            headerAttributes: {
                                "class": "checkbox-align",
                            }
                        },
                            {
                                field: "name",
                                title: "Name",
                                template: "<div class='k-text-center'><span width='30'>#: name#</span></div>",
                                width: 300,
                                editor: customEditor
                            }
                        ]
                    });
                },
                error: function (xhr) {
                    console.log(xhr.statusCode);
                }

                    
            }

        );
        

        var editor = $("#textEditor").kendoEditor({
            stylesheets: [
                "~/css/editor.css",
            ],
            tools: [
                "bold",
                "italic",
                "underline",
                "undo",
                "redo",
                "justifyLeft",
                "justifyCenter",
                "justifyRight",
                "insertUnorderedList",
                "createLink",
                "unlink",
                "insertImage",
                "tableWizard",
                "tableProperties",
                "tableCellProperties",
                "createTable",
                "addRowAbove",
                "addRowBelow",
                "addColumnLeft",
                "addColumnRight",
                "deleteRow",
                "deleteColumn",
                "mergeCellsHorizontally",
                "mergeCellsVertically",
                "splitCellHorizontally",
                "splitCellVertically",
                "tableAlignLeft",
                "tableAlignCenter",
                "tableAlignRight",
                "formatting",
                {
                    name: "fontName",
                    items: [
                        { text: "Andale Mono", value: "\"Andale Mono\"" }, // Font-family names composed of several words should be wrapped in \" \"
                        { text: "Arial", value: "Arial" },
                        { text: "Arial Black", value: "\"Arial Black\"" },
                        { text: "Book Antiqua", value: "\"Book Antiqua\"" },
                        { text: "Comic Sans MS", value: "\"Comic Sans MS\"" },
                        { text: "Courier New", value: "\"Courier New\"" },
                        { text: "Georgia", value: "Georgia" },
                        { text: "Helvetica", value: "Helvetica" },
                        { text: "Impact", value: "Impact" },
                        { text: "Symbol", value: "Symbol" },
                        { text: "Tahoma", value: "Tahoma" },
                        { text: "Terminal", value: "Terminal" },
                        { text: "Times New Roman", value: "\"Times New Roman\"" },
                        { text: "Trebuchet MS", value: "\"Trebuchet MS\"" },
                        { text: "Verdana", value: "Verdana" },
                    ]
                },
                "fontSize",
                "foreColor",
                "backColor",
            ]
        });
    
        $('#comboBox').kendoComboBox({
            dataSource: {
                transport: {
                    read: {
                        dataType: "json",
                        url: "/Report401/Offices"
                    }
                }
            },
            dataTextField: "text",
            fillMode: "flat",
            label: {
                content: "Office", // Specify the label content.
                floating: true // Allow the label to float.
            },
            clearButton: true
        });
    
    });
    
</script>